{
  "name": "arackiralama-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Private car rental admin panel mono-repo",
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "install-all": "npm install && npm install --prefix api && npm install --prefix web",
    "dev": "concurrently \"npm run api:dev\" \"npm run web:dev\"",
    "api:dev": "npm run dev --prefix api",
    "api:migrate": "npm run migrate --prefix api",
    "api:seed": "npm run seed --prefix api",
    "api:start": "npm run start --prefix api",
    "web:dev": "npm run dev --prefix web",
    "web:build": "npm run build --prefix web",
    "web:preview": "npm run preview --prefix web",
    "build": "npm run build --prefix web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
